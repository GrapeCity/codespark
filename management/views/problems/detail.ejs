<!DOCTYPE html>
<html>
<% include ../partial/head.ejs %>
<body class="app">
<div class="wrapper">
    <% include ../partial/sidebar.ejs %>
    <div class="main-panel">

        <nav class="navbar navbar-transparent navbar-absolute">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="btn btn-white btn-lg" href="/problems">
                        <i class="fa fa-angle-left" style="font-size: x-large"></i></a>
                </div>
                <div class="collapse navbar-collapse">
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="card">
                        <div class="card-header" data-background-color="white">
                            <div class="row">
                                <div class="col-md-8 col-xs-8">
                                    <h4 class="title">Problem Details</h4>
                                    <p class="category">Include problems
                                        on <%= new Date().toLocaleString('zh-Hans-CN') %></p>
                                </div>
                                <div class="col-md-4 col-xs-4">
                                    <a class="btn btn-success"
                                       href="/problems/<%= problem.name %>/edit"
                                       style="margin-left: 40px;">
                                        <i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger"
                                       href="/problems/<%= problem.name %>/remove">
                                        <i class="fa fa-recycle"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="card-content">
                            <table class="table table-hover">
                                <tbody class="small">
                                <tr>
                                    <td>Name</td>
                                    <td><%= problem.name %></td>
                                </tr>
                                <tr>
                                    <td>Title</td>
                                    <td><%= problem.title %></td>
                                </tr>
                                <tr>
                                    <td>Description</td>
                                    <td><%= problem.description %></td>
                                </tr>
                                <tr>
                                    <td>Cases</td>
                                    <td>
                                        <table class="table table-responsive">
                                            <% if(problem.cases && problem.cases.length > 0) { %>
                                            <thead class="text-gray">
                                            <th>Id</th>
                                            <th>Input</th>
                                            <th style="width: 300px;">Expect</th>
                                            </thead>
                                            <tbody class="small">
                                            <% problem.cases.forEach(function(cs){ %>
                                            <tr id="<%= cs.id %>">
                                                <td><%= cs.id %></td>
                                                <td><%= cs.input %></td>
                                                <td><%= cs.expect %></td>
                                            </tr>
                                            <% }) %>
                                            </tbody>
                                            <% } else { %>
                                            <div class="h3 text-warning">There is no cases</div>
                                            <% } %>
                                        </table>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <% include ../partial/footer.ejs %>
    </div>
</div>
<% include ../partial/scripts.ejs %>
</body>
</html>