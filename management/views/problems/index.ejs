<!DOCTYPE html>
<html>
<% include ../partial/head.ejs %>
<body class="app">
<div class="wrapper">
    <% include ../partial/sidebar.ejs %>
    <div class="main-panel">
        <% include ../partial/navbar.ejs %>
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="card">
                        <div class="card-header" data-background-color="white">
                            <div class="row">
                                <div class="col-md-8 col-xs-8">
                                    <h4 class="title">Problems List</h4>
                                    <p class="category">Include problems
                                        on <%= new Date().toLocaleString('zh-Hans-CN') %></p>
                                </div>
                                <div class="col-md-4 col-xs-4">
                                    <a class="btn btn-success"
                                       href="/problems/add"
                                       style="margin-left: 40px;">
                                        <i class="fa fa-plus"></i></a>
                                    <a class="btn btn-danger disabled"
                                       href="/problems/remove">
                                        <i class="fa fa-recycle"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="card-content">
                            <table class="table table-hover">
                                <% if(problems && problems.length > 0) { %>
                                <thead class="text-gray">
                                <th>&nbsp;</th>
                                <th>Name</th>
                                <th>Display Name</th>
                                <th style="width: 200px;">Description</th>
                                </thead>
                                <tbody class="small">
                                <% problems.forEach(function(problem){ %>
                                <tr id="<%= problem.name %>">
                                    <td class="td-actions text-right">
                                        <a type="button" rel="tooltip" title="Edit"
                                           href="/contests/<%= problem.name %>/edit"
                                           class="btn btn-primary btn-simple btn-xs">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a type="button" rel="tooltip" title="Remove"
                                           href="/contests/<%= problem.name %>/remove"
                                           class="btn btn-danger btn-simple btn-xs">
                                            <i class="fa fa-remove"></i>
                                        </a>
                                    </td>
                                    <td><a href="/problems/<%= problem.name %>"><%= problem.name %></a></td>
                                    <td><%= problem.title %></td>
                                    <td><%= problem.description %></td>
                                </tr>
                                <% }) %>
                                </tbody>
                                <% } else { %>
                                <div class="h3 text-warning">There is no problem</div>
                                <% } %>
                            </table>
                            <% if(problems && problems.length > 0) { %>
                            <div>
                                <div class="pull-right">
                                    <div class="btn-group-xs">
                                        <a class="btn btn-xs btn-primary btn-round <%= form.prev.enable ? '' : 'disabled' %>"
                                           href="<%= form.prev.url %>">
                                            <i class="fa fa-angle-left"></i>
                                        </a>
                                        <a class="btn btn-xs btn-primary btn-round <%= form.next.enable ? '' : 'disabled' %>"
                                           href="<%= form.next.url %>">
                                            <i class="fa fa-angle-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include ../partial/footer.ejs %>
    </div>
</div>
<% include ../partial/scripts.ejs %>
</body>
</html>