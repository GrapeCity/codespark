<!DOCTYPE html>
<html>
<head>
    <% include ../partial/head.ejs %>
    <link rel="stylesheet" type="text/css" href="/css/css3clock.css"/>
    <style>
        .landing-page .table-hover > tbody > tr:hover {
            color: black;
        }
    </style>
</head>
<body class="landing-page">
<!-- Navbar -->
<nav class="navbar navbar-transparent navbar-fixed-top navbar-color-on-scroll">
    <% include ../partial/navbar.ejs %>
</nav>
<!-- End Navbar -->
<div class="wrapper">
    <div class="header header-filter" style="background-image: url('/img/bg3.jpg');">
        <div class="container" style="padding-top: 20vh">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="title">
                        <small style="color:white">欢迎参加：</small><%= form.contest.displayName %></h3>
                    <p><%= form.contest.description %></p>
                    <br/>
                    <h4>比赛时间</h4>
                    <p>
                        <i class="fa fa-clock-o" style="font-size: 2em"></i>
                        <b>
                            <%= form.contest.begin %>
                        </b> - <b>
                            <%= form.contest.end %>
                        </b>
                    </p>
                    <br/>
                    <h4>我的得分</h4>
                    <p><i class="fa fa-graduation-cap" style="font-size: 2em"></i>
                        <%= form.board.score %></p>
                </div>

                <div class="col-md-6">
                    <h3 class="title">荣誉榜</h3>

                    <% if (!form.top10 || form.top10.length === 0) { %>
                    <h5>该竞赛还没有人得分</h5>
                    <% } else { %>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th>姓名</th>
                            <th>得分</th>
                            <th class="text-right">邮箱</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% form.top10.forEach( (uc, i) => { %>
                        <tr>
                            <td class="text-center"><%= i + 1 %></td>
                            <td><%= uc.user.displayName %></td>
                            <td><%= uc.score %></td>
                            <td class="text-right"><%= uc.user.mail %>
                            </td>
                        </tr>
                        <% }) %>
                        </tbody>
                    </table>
                    <% } %>

                </div>
            </div>
        </div>
    </div>
    <div class="main main-raised">
        <div class="section text-center section-landing">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 col-md-offset-1"
                         style="min-height: 500px; background-color: #eee; padding: 10px 10px;">
                        <ul class="nav nav-pills" role="tablist">
                            <% form.contest.problems.forEach((p, i) => { %>
                            <li <%= (i == 0) ? 'class=active' : '' %>>
                                <a href="#<%= p.name %>" role="tab" data-toggle="tab">
                                    <%= i + 1 %>. <%= p.title %>
                                </a>
                            </li>
                            <% }) %>
                        </ul>
                    </div>
                    <div class="col-md-8" style="padding-left: 40px">
                        <div class="tab-content text-left">
                            <% form.contest.problems.forEach((p, i) => { %>
                            <div class="tab-pane <%= (i == 0) ? 'active' : 'text-left' %>" id="<%= p.name %>">
                                <div class="row">
                                    <h3 class="title col-md-8" style="max-width: 500px"><%= p.title %></h3>
                                    <div class="pull-right">
                                        <div class="btn-group" style="margin:30px 1px 0 1px">
                                            <button class="btn btn-success"
                                                    style="min-width: 120px;"
                                                    onclick="switchProblemTo('<%= p._id %>','<%= p.title %>')"
                                                    data-toggle="modal"
                                                    data-target="#myModal">答题
                                            </button>
                                            <a class="btn btn-warning"
                                               style="min-width: 120px;"
                                               href="/debug"
                                               target="_blank">调试工具</a>
                                        </div>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-md-12" style="min-height: 400px;">
                                        <%= p.description %>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include ../partial/footer.ejs %>
</div>

<!-- Modal Core -->
<div class="modal fade" id="myModal" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #eee">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title" id="myModalLabel"></h3>
            </div>
            <div class="modal-body">
                <input type="hidden" id="contestId" name="contestId" value="<%= form.contest._id %>"/>
                <input type="hidden" id="problemId" name="problemId" value=""/>
                <div class="row">
                    <ul id="warningList">
                    </ul>
                </div>
                <!--<div class="row">-->
                <!--<div class="col-md-4 dropdown">-->
                <!--<a href="#" class="btn btn-simple dropdown-toggle" data-toggle="dropdown">-->
                <!--选择答题环境-->
                <!--<b class="caret"></b>-->
                <!--</a>-->
                <!--<ul class="dropdown-menu">-->
                <!--<li class="active"><a href="#">javascript</a></li>-->
                <!--<li><a href="#">java</a></li>-->
                <!--<li><a href="#">csharp</a></li>-->
                <!--<li><a href="#">cpp</a></li>-->
                <!--<li><a href="#">python</a></li>-->
                <!--</ul>-->
                <!--</div>-->
                <!--</div>-->
                <div class="row">
                    <h5>请再下面的代码框里贴入你的JavaScript代码</h5>
                    <pre>
