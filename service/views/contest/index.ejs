    <div class="header header-filter" style="background-image: url('/img/bg2.jpg');">
        <div class="container" style="padding-top: 20vh">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="title">
                        <small style="color:white">欢迎参加：</small><%= form.contest.displayName %></h3>
                    <p><%= form.contest.description %></p>
                    <br/>
                    <h4>比赛时间</h4>
                    <p>
                        <i class="fa fa-clock-o"></i><b>
                            <%= form.contest.begin %>
                        </b> - <b>
                            <%= form.contest.end %>
                        </b>
                    </p>
                    <br/>
